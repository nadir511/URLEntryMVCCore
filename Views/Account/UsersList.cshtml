<script>
    $(document).ready(function() {
        $('#userTbl').DataTable();
        var selectedUserId = 0;
    });
    $("#btnAddNewUser").click(function() {
        $.ajax({
            url: "@Url.Action("Register", "Account")",
            type: 'GET',
            contentType: 'application/json',
            beforeSend: function() {
                $("#logoLoader").fadeIn();
            },
            success: function(obj) {
                $("#logoLoader").fadeOut();
                $('#MainModalLabel').html('Register User');
                $('#MainModalBody').html(obj);
                $('#MainAppModal').modal('show');
            },
            error: (error) => {
                console.log(JSON.stringify(error));
            }
        });
    });
    function EditUser(id) {
        $.ajax({
            type: 'GET',
            url: "@Url.Action("EditRegister", "Account")",
            data: { userId: id },
            beforeSend: function() {
                $("#logoLoader").fadeIn();
            },
            success: function(obj) {
                $("#logoLoader").fadeOut();
                $('#MainModalLabel').html('Update User');
                $('#MainModalBody').html(obj);
                $('#MainAppModal').modal('show');
            },
            error: (error) => {
                console.log(JSON.stringify(error));
            }
        });
    }
    function DeleteUser(id) {
        selectedUserId = id;
        $('#DeleteAppModal').modal('show');
    }
    $("#deleteBtn").click(function() {
        $.ajax({
            type: "POST",
            url: '@Url.Action("DeleteUser", "Account")',
            data: { userId: selectedUserId },
            beforeSend: function() {
                $("#logoLoader").fadeIn();
            },
            success: function(data) {
                $("#logoLoader").fadeOut();
                if (data == 1) {
                    location.reload(true);
                }
                else if (data == 1) {
                    alert('Some error has been occured while deleting the user')
                }
            }
        })
    });
