@model URLEntryMVC.ViewModel.CustomerVM.CustomerVM
@{
    var base64Image = Convert.ToBase64String(Model.CustomerPic);
    var source = String.Format("data:image/png;base64,{0}", base64Image);
}
<div class="container-xxl flex-grow-1 container-p-y">
    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <h5 class="card-header">Profile Details</h5>
                <!-- Account -->
                <div class="card-body">
                    <div class="d-flex align-items-start align-items-sm-center gap-4">
                        <img src="@source" alt="Customer Logo Here" height="100" width="100" />
                    </div>
                </div>
                <hr class="my-0">
                <div class="card-body">
                    @using (Html.BeginForm("customerProfile", "Customers", FormMethod.Post, new { id = "customerProfile" }))
                    {
                        @Html.HiddenFor(m=>m.Id)
                        <div class="row">
                            <div class="mb-3 col-md-6">
                                <label class="form-label">Customer Name</label>
                                <input type="text" asp-for="CustomerName" class="form-control" required readonly>
                                <span asp-validation-for="CustomerName" class="text-danger"></span>
                            </div>
                            <div class="mb-3 col-md-6">
                                <label class="form-label">Phone No</label>
                                <input type="text" asp-for="ContactNumber" class="form-control" readonly>
                                <span asp-validation-for="ContactNumber" class="text-danger"></span>
                            </div>
                            <div class="mb-3 col-md-6">
                                <label class="form-label">E-mail</label>
                                <input type="text" asp-for="CustomerEmail" class="form-control" readonly>
                                <span asp-validation-for="CustomerEmail" class="text-danger"></span>
                            </div>
                            <div class="mb-3 col-md-6">
                                <label class="form-label">Address</label>
                                <input type="text" asp-for="Address" class="form-control" readonly>
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                            <div class="mb-3 col-md-6">
                                <label class="form-label">Facebook</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class='bx bxl-facebook-circle'></i></span>
                                    <input type="url" asp-for="Facebook" class="form-control">
                                </div>
                                <span asp-validation-for="Facebook" class="text-danger"></span>
                            </div>
                            <div class="mb-3 col-md-6">
                                <label class="form-label">Instagram</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class='bx bxl-instagram-alt'></i></span>
                                    <input type="url" asp-for="Instagram" class="form-control">
                                </div>
                                <span asp-validation-for="Instagram" class="text-danger"></span>
                            </div>
                            <div class="mb-3 col-md-6">
                                <label class="form-label">Twitter</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class='bx bxl-twitter'></i></span>
                                    <input type="url" asp-for="Twitter" class="form-control">
                                </div>
                                <span asp-validation-for="Twitter" class="text-danger"></span>
                            </div>
                            <div class="mb-3 col-md-6">
                                <label class="form-label">LinkedIn</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class='bx bxl-linkedin-square'></i></span>
                                    <input type="url" asp-for="LinkedIn" class="form-control">
                                </div>
                                <span asp-validation-for="LinkedIn" class="text-danger"></span>
                            </div>
                            <div class="mb-3 col-md-6">
                                <label class="form-label">TikTok</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class='bx bxl-tiktok'></i></span>
                                    <input type="url" asp-for="TikTok" class="form-control">
                                </div>
                                <span asp-validation-for="TikTok" class="text-danger"></span>
                            </div>
                            <div class="mb-3 col-md-6">
                                <label class="form-label">YouTube</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class='bx bxl-youtube'></i></span>
                                    <input type="url" asp-for="Youtube" class="form-control">
                                </div>
                                <span asp-validation-for="Youtube" class="text-danger"></span>
                            </div>
                            <div class="mb-3 col-md-6">
                                <label class="form-label">Snapchat</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class='bx bxl-snapchat'></i></span>
                                    <input type="url" asp-for="Snapchat" class="form-control">
                                </div>
                                <span asp-validation-for="Snapchat" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="mt-2 text-end">
                            <button type="submit" class="btn btn-primary me-2">Save changes</button>
                        </div>
                    }
                </div>
                <!-- /Account -->
            </div>
        </div>
    </div>
</div>
